{% block lin3s_cms_date_picker_widget %}
    <div class="form__group">
        {{ form_label(form) }}
        <div class="datepicker">
            {{- form_row(form.date_picker, {
                attr: {
                    'class': 'datepicker__form-input',
                }
            }) -}}
            <div class="datepicker__react-wrapper"></div>
        </div>
    </div>
{% endblock %}
