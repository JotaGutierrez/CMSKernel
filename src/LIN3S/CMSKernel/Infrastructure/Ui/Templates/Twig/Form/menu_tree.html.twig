{% block menu_tree_widget %}
    {% set menu_tree = form.vars.data.tree is not empty ? form.vars.data.tree | json_encode | raw : '' %}

    <div class="form__group">
        {{ form_label(form) }}
        <div class="menu-tree">
            {{- form_row(form.tree, {
                attr: {
                    'class': 'menu-tree__form-input',
                    'data-menu-tree': menu_tree
                }
            }) -}}
            <div class="menu-tree__react-wrapper"></div>
        </div>
    </div>

    <script src="{{ asset('bundles/lin3scmskernel/js/components/menutree.min.js') }}"></script>
{% endblock %}
