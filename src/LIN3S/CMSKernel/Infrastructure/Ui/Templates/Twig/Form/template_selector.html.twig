{% block template_selector_widget %}
    <div class="template-selector">
        <div class="template-selector__name">
            {%- for index, child in form %}
                {% if child.vars.name == 'name' %}
                    {{- form_row(child) -}}
                {% endif %}
            {% endfor -%}
        </div>
        <div class="template-selector__templates">
            {%- for index, child in form %}
                {% if child.vars.name == 'name' %}
                    {{- form_row(child) -}}
                {% else %}
                    <div class="form__group template-selector__template" data-template-index="{{ index }}">
                        {{- form_widget(child) -}}
                    </div>
                {% endif %}
            {% endfor -%}
        </div>
    </div>
{% endblock template_selector_widget %}
