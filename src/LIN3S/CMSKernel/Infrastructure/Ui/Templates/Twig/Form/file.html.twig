{% block lin3s_cms_file_widget %}
    {% set filePreview = form.vars.file_preview is not empty ? form.vars.file_preview | json_encode | raw : '' %}

    <div class="form__group">
        {{ form_label(form) }}
        <div class="file">
            {{- form_row(form.file, {
                attr: {
                    'class': 'file__form-input',
                    'data-upload-endpoint': form.vars.upload_endpoint.path,
                    'data-gallery-endpoint': form.vars.gallery_endpoint.path,
                    'data-gallery-page-limit': form.vars.gallery_page_limit | default(40),
                    'data-mime-types': form.vars.mime_types | json_encode | raw,
                    'data-preview': filePreview
                }
            }) -}}
            <div class="file__react-wrapper"></div>
        </div>
    </div>
{% endblock %}
