  "devDependencies": {
    "autoprefixer": "^6.7.2",
    "babel-cli": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.18.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-2": "^6.13.0",
    "eslint": "^3.15.0",
