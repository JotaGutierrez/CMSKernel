    "draftjs-to-html": "^0.6.2",
    "lin3s-event-bus": "^0.3.2",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-draft-wysiwyg": "^1.7.3",
    "react-modal": "^1.6.5"
  },
  "babel": {
    "presets": [
      "stage-2",
